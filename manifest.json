{
  "manifest_version": 2,
  "name": "ポモドーロタイマー(Pomodoro Timer)",
  "version": "1.0.2",
  "description": "ポモドーロテクニックを使いたい方向けタイマーです。設定時間毎に確認画面が表示されます。",
  "icons": {
      "16": "images/iconBird.png",
      "48": "images/iconBird.png",
      "128": "images/iconBird.png"
  },
  "browser_action": {
      "default_icon": {
          "19": "images/iconBird.png"
      },
      "default_title": "ポモドーロタイマー",
      "default_popup": "timer.html"
  },
  "background": {
      "scripts": [ "js/background.js" ],
      "persistent": true
  },
  "permissions": [
      "background"
  ]
}